@model InstaSharp.Models.Media
           
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <img src="@Model.Images.StandardResolution.Url" alt="Упс, что-то случилось с картинкой!"/>
        </div>
        <div class="col-lg-4">
            <div class="row">
                <div class="col-lg-12">@Model.Caption</div>
                <div class="col-lg-12">
                    @foreach (var tag in Model.Tags)
                    {
                        <span class="tag">#@tag</span>
                    }
                </div>
                <div class="col-lg-12">Likes: @Model.Likes.Count</div>
            </div>
        </div>
    </div>
</div>

